<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppTheme" parent="android:Theme.Light" />

    <style name="NoTitleBarTheme" parent="android:Theme.Light.NoTitleBar"></style>

    <style name="main_tip">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="or_size">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="main_input">
        <item name="android:textColorHint">#D8D8D7</item>
        <item name="android:background">@drawable/droplist_view_bg</item>
        <item name="android:paddingLeft">10dp</item>
    </style>

    <style name="button">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">20sp</item>
        <item name="android:background">@drawable/big_button</item>
    </style>

    <style name="manually_input_title">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="sample_bar_tip">
        <item name="android:textColor">#FF0000</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="keyboard_button">
        <item name="android:textColor">#FF000000</item>
        <item name="android:background">@drawable/button_bg_white</item>
        <item name="android:height">45dp</item>
        <item name="android:width">50dp</item>
        <item name="android:layout_marginLeft">5dip</item>
        <item name="android:layout_marginRight">5dip</item>
        <item name="android:layout_marginTop">5dip</item>
        <item name="android:layout_marginBottom">5dip</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="editText_input_phone">
        <item name="android:textColor">#000000</item>
        <item name="android:textColorHint">#d0d0d0</item>
        <item name="android:inputType">text</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_height">30dip</item>
        <item name="android:layout_marginBottom">5dip</item>
        <item name="android:layout_marginTop">5dip</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:maxLength">11</item>
    </style>

    <style name="login_editText_input_password">
        <item name="android:textColor">#000000</item>
        <item name="android:textColorHint">#d0d0d0</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_height">30dip</item>
        <item name="android:layout_marginBottom">5dip</item>
        <item name="android:layout_marginTop">5dip</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:maxLength">20</item>
        <item name="android:password">true</item>
        <item name="android:inputType">text</item>
    </style>

    <style name="TransparentDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:windowBackground">@color/transparent</item>
    </style>

    <style name="MyDialogStyleBottom" parent="android:Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <!-- 边框 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- 半透明 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 无标题 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 背景透明 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 模糊 -->
    </style>

    <style name="alading_dialog" parent="android:Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

</resources>