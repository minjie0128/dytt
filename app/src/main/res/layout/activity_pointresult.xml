<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white" >

    <RelativeLayout
        android:id="@+id/r_title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/navbarback" >

        <Button
            android:id="@+id/b_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/back"
            android:text="返回"
            android:textColor="#FFFFFFFF" >
        </Button>

        <Button
            android:id="@+id/b_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/home"
            android:text="主页"
            android:textColor="#FFFFFFFF" >
        </Button>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="500dp"
        android:layout_below="@+id/r_title_bar"
        android:background="@drawable/mainback"
        android:paddingTop="5dp" >

        <TextView
            android:id="@+id/t_title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:text="收银联"
            android:textColor="#E3771D"
            android:textSize="18sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/l_block_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/t_title_text"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/bg_round_orange"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/r_service_term"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:clickable="true"
                android:focusable="true" >

                <TextView
                    android:id="@+id/t_order_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingLeft="10dp"
                    android:text="@string/order_money"
                    android:textColor="@color/black" />
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1.5dip"
                android:background="@color/orange" />

            <RelativeLayout
                android:id="@+id/r_about_alading"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:clickable="true"
                android:focusable="true" >

                <TextView
                    android:id="@+id/t_order_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingLeft="10dp"
                    android:text="@string/order_number"
                    android:textColor="@color/black" />
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1.5dip"
                android:background="@color/orange" />

            <RelativeLayout
                android:id="@+id/r_about_product"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:clickable="true"
                android:focusable="true" >

                <TextView
                    android:id="@+id/t_order_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingLeft="10dp"
                    android:text="@string/order_time"
                    android:textColor="@color/black" />
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1.5dip"
                android:background="@color/orange" />

            <RelativeLayout
                android:id="@+id/r_app_update"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:clickable="true"
                android:focusable="true" >

                <TextView
                    android:id="@+id/t_order_expiration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingLeft="10dp"
                    android:text="@string/order_expiration"
                    android:textColor="@color/black" />
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1.5dip"
                android:background="@color/orange" />

            <RelativeLayout
                android:id="@+id/r_develop_test"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:clickable="true"
                android:focusable="true"
                android:visibility="gone" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingLeft="10dp"
                    android:text="@string/order_mobile"
                    android:textColor="@color/black" />
            </RelativeLayout>

            <View
                android:id="@+id/v_test_divider"
                android:layout_width="fill_parent"
                android:layout_height="1.5dip"
                android:background="@color/orange"
                android:visibility="gone" />

            <RelativeLayout
                android:id="@+id/r_hot_line"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:clickable="true"
                android:focusable="true" >

                <TextView
                    android:id="@+id/t_order_mobile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingLeft="10dp"
                    android:text="@string/order_mobile"
                    android:textColor="@color/black" />
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>